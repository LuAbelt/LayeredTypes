start: _stmt*

ident: WORD

_stmt:       _expr
            | layer_def
            | assign
            | if_stmt
            | let_stmt
            | fun_def
assign:     ident ":=" _expr
if_stmt:    "if" ident "then" _stmt "else" _stmt
let_stmt:   "let" ident ":=" _expr "in" _stmt
const:      "True" -> true
            | "False" -> false
            | SIGNED_NUMBER -> num
_expr:       ident
            | const
            | bin_op
            | fun_call
            | "(" _expr ")"              //Convenience for readability
fun_def:    WORD WORD "{" _stmt "}"
fun_call:   WORD _expr
layer_def: ident "::" ident "::"  /.+/  -> layer
bin_op:     _expr OP _expr
OP: "+" | "-" | "*" | "==" | "!=" | "<" | ">" | "<=" | ">="

%import common.WORD
%import common.WS
%import common.SIGNED_NUMBER
%import common.SQL_COMMENT
%ignore WS
%ignore SQL_COMMENT
